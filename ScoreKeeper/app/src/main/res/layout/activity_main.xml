<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:baselineAligned="false">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Team A"

        android:layout_margin="8dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="0"
        android:textColor="#000000"
        android:textSize="30sp"
    android:id="@+id/teamA_Score"
    android:gravity="center_horizontal"
    android:layout_margin="8dp"
    />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/ThreeScoreTeamA"
        android:backgroundTint="#EC6912"
        android:text="+3 POINTS"/>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/TwoScoreTeamA"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#EC6912"
        android:text="+2 POINTS"/>
    <Button
        android:id="@+id/FreeThrowTeamA"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EC6912"
        android:text="FREE THROW"/>
</LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:background="#000000"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
        android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Team B"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            />
        <TextView
        android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/teamB_Score"
            android:textSize="30sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            />
        <Button
            android:layout_width="match_parent"
        android:id="@+id/ThreeScoreTeamB"
        android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#EC6912"
            android:text="+3 POINTS"/>
        <Button
        android:layout_margin="8dp"
        android:id="@+id/TwoScoreTeamB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#EC6912"
            android:text="+2 POINTS"/>
        <Button
        android:layout_margin="8dp"
        android:id="@+id/FreeThrowTeamB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#EC6912"
            android:text="FREE THROW"/>
    </LinearLayout>

</LinearLayout>
    <Button
        android:layout_margin="8dp"
        android:id="@+id/Btn_Reset"
        android:layout_width="wrap_content"
        android:text="Reset"
        android:backgroundTint="#EC6912"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"/>
</RelativeLayout>
